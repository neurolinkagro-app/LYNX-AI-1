from flask import Flask, render_template_string, request
import pandas as pd
from datetime import datetime
import os

app = Flask(__name__)

HTML = """
<!DOCTYPE html>
<html>
<head>
    <title>IA Alimentaria & Retail</title>
    <style>
        body { font-family: Arial; background: #f4f6f8; padding: 40px; }
        .card { background: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; }
        h1 { color: #c62828; }
        .alert { color: red; font-weight: bold; }
    </style>
</head>
<body>

<h1>IA Alimentaria & Retail</h1>

<div class="card">
    <h3>Subir archivos Excel</h3>
    <form method="POST" enctype="multipart/form-data">
        <p>Inventario: <input type="file" name="inventario" required></p>
        <p>Temperatura: <input type="file" name="temperatura" required></p>
        <button type="submit">Analizar</button>
    </form>
</div>

{% if resultado %}
<div class="card">
    <h3>Resultado IA</h3>
    <p>Productos en riesgo de vencimiento: <b>{{ resultado.vencimientos }}</b></p>
    <p>Eventos de temperatura cr√≠tica: <b>{{ resultado.temperatura }}</b></p>
    <p>Dinero estimado en riesgo: <span class="alert">${{ resultado.dinero }}</span></p>
</div>
{% endif %}

</body>
</html>
"""

@app.route("/", methods=["GET", "POST"])
def index():
    resultado = None

    try:
        if request.method == "POST":
            inv_file = request.files.get("inventario")
            temp_file = request.files.get("temperatura")

            if not inv_file or not temp_file:
                raise Exception("Faltan archivos")

            inv = pd.read_excel(inv_file)
            temp = pd.read_excel(temp_file)

            inv["fecha_vencimiento"] = pd.to_datetime(inv["fecha_vencimiento"], errors="coerce")
            hoy = datetime.now()

            vencimientos = inv[inv["fecha_vencimiento"] <= hoy]
            temp_riesgo = temp[temp["temperatura"] > 5]

            dinero_riesgo = len(vencimientos) * 250000

            resultado = {
                "vencimientos": int(len(vencimientos)),
                "temperatura": int(len(temp_riesgo)),
                "dinero": f"{dinero_riesgo:,}".replace(",", ".")
            }

    except Exception as e:
        resultado = {
            "vencimientos": "Error",
            "temperatura": "Error",
            "dinero": str(e)
        }

    return render_template_string(HTML, resultado=resultado)

if __name__ == "__main__":
    port = int(os.environ.get("PORT", 10000))
    app.run(host="0.0.0.0", port=port)
